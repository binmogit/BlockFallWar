    "color": "^5.0.2",
    "konva": "^10.0.8"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "tests/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{css,html}": [
      "prettier --write",
      "git add"
    ]
  }
